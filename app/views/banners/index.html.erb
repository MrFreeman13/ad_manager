<h3>
  Platform: <%=@platform.name %>, <%=@platform.url %>
</h3>
<h4>
  Platform Url (share it to your site) :<pre><%= "#{root_url}platforms/#{@platform.token}" %></pre>
</h4>

<h2>Listing banners</h2>

<table class="table table-bordered">
  <thead>
  <tr>
    <th>Banner name</th>
    <th>Views</th>
    <th>Max Views</th>
    <th>Clicks</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @banners.each do |banner| %>
      <tr>
        <td><%= banner.name %></td>
        <td><%= banner.views %></td>
        <td><%= banner.max_views %></td>
        <td><%= banner.clicks %></td>
        <td>
          <% if current_user && current_user.admin %>
              <%= link_to 'Edit', edit_platform_banner_path(@platform, banner) %> <%= link_to 'Destroy', platform_banner_path(@platform, banner), method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
          </td>
      </tr>
  <% end %>
  </tbody>
</table>
<br />
<% if current_user && current_user.admin%><%= link_to 'New Banner', new_platform_banner_path %><%end%>
